@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using FA.JustBlog.Core.Models;
@model IEnumerable<Tags>;

<h1>All Tags</h1>
<div>
    <a href="CreateNew" class="btn btn-primary">Create New</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">          
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Url Slug</th>
                            <th scope="col">Count</th>
                            <th scope="col">Detail</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in Model)
                        {
                            <tr>
                                <td>@tag.Name</td>
                                <td>@tag.Description</td>
                                <td>@tag.UrlSlug</td>
                                <td>@tag.Count</td>
                                <td>
                                    <a href="/Admin/Tags/Detail/@tag.Id">
                                        <input type="button" class="btn btn-primary" value="Detail">
                                    </a>
                                </td>
                                <td>
                                    <a href="/Admin/Tags/Edit/@tag.Id">
                                        <input type="button" class="btn btn-warning" value="Edit">
                                    </a>
                                </td>
                                <td>
                                    <a href="/Admin/Tags/Delete/@tag.Id">
                                        <input type="button" class="btn btn-danger" value="Delete">
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Url Slug</th>
                            <th scope="col">Count</th>
                            <th scope="col">Detail</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>

</div>